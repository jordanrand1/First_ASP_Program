@model First_ASP_Program.Models.Person
@{
    ViewBag.Title = "Advanced";
}

<h2>Hello <span data-bind="text: getName()"></span></h2>

@section Scripts {
<script>
    function ViewModel(firstName, lastName) {
        let self = this;

        self.name = `${firstName} ${lastName}`

        self.getName = () => {
            return self.name;
        }
    }
    let viewModel = new ViewModel('@Model.FirstName', '@Model.LastName')
    ko.applyBindings(viewModel)
</script>
}